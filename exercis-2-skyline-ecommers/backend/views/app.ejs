<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Uploading</title>
</head>

<body>
    <h1>To Upload Image on mongoDB</h1>
    <hr>
    <div>
        <form action="/" method="POST" enctype="multipart/form-data">
            <div>
                <label for="name">Image Title</label>
                <input type="text" id="name" placeholder="Name" value="" name="name" required>
            </div>
            <div>
                <label for="price">Image Price</label>
                <input type="number" id="price" placeholder="price" value="" name="price" required>
            </div>
            <div>
                <label for="image">URL Image</label>
                <input type="text" id="image" name="image" value="" placeholder="https://" required>
            </div>
            <div>
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>

    <hr>

    <h1>Uplaoded Images</h1>
    <div>
        <% items.map(function(image) { %>
        <div>
            <div>
                <p>image: <%= image.image%></p>
                <div>
                    <p>nama : <%= image.name %></p>
                    <p>price: <%= image.price %></p>
                    <hr />
                </div>
            </div>
        </div>
        <% }) %>
    </div>

</body>

</html>